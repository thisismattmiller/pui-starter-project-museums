    <input type="checkbox" id="history_museums_checkbox" >history_museums
 
    
    <div id="mapid" style="height:500px">
      
    </div>
    
    
    <script>
    
    var theData = [];
    var checkbox_history_museums = false;  

    var mymap = L.map('mapid').setView([39.644563, -96.356825], 3);
    L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
      attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
      tileSize: 512,
      maxZoom: 18,
      zoomOffset: -1,
      id: 'mapbox/streets-v11',
      accessToken: 'pk.eyJ1IjoidGhpc2lzbWF0dG1pbGxlciIsImEiOiJjazJsMTEyaG4wMjlwM25xZXVtd2g4OHJmIn0.HuO03SisXsE5EsSfH_Yxrw'
    }).addTo(mymap);
   
    var markersLayer = new L.LayerGroup(); // NOTE: Layer is created here!

      
    markersLayer.addTo(mymap);

      
    $.getJSON( "https://pui-museums.glitch.me/search?searchin=all&orderby=title&searchval=&format=json", function( data ) {
      theData = data
      refreshMap()

    });
      
    var refreshMap = function(){
      
      markersLayer.clearLayers();
      
      theData.forEach((museum)=>{
        console.log(museum.langtitude)
        console.log(museum)

        if (checkbox_history_museums == true){
          if (museum.history_museums == 1){
             var marker = L.marker([museum.latitude, museum.langtitude]);
             markersLayer.addLayer(marker);
             marker.bindPopup("<b><center>" + museum.museumname + "!<center></b>").openPopup();            
          }
          
        }
        

      })      
    }  
      
      
    $('#history_museums_checkbox').change(function() {
        if(this.checked) {
          checkbox_history_museums = true;
        }else{
          checkbox_history_museums = false;
        }
        refreshMap()
    });      
    
    
    
    
    </script>
    
    
    
  </body>
